<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/right_bar"
    android:layout_width="@dimen/right_bar_w"
    android:layout_height="fill_parent"
    android:layout_gravity="right"
    android:background="@color/theme_color" >

    <TextView
        android:id="@+id/app_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:drawableTop="@drawable/ic_launcher"
        android:gravity="center"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:text="@string/app_name"
        android:textColor="#FFFFFFFF"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/all_but"
        style="@style/button_body"
        android:layout_width="fill_parent"
        android:layout_below="@id/app_name"
        android:layout_margin="2dip"
        android:text="@string/but_all" />

    <LinearLayout
        android:id="@+id/setting_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/refresh_but"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:src="@drawable/navigation_refresh" />

        <ImageView
            android:id="@+id/timeline_but"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:src="@drawable/timeline" />

        <ImageView
            android:id="@+id/setting_but"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:src="@drawable/action_settings" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/setting_lay"
        android:layout_below="@id/all_but"
        android:layout_marginBottom="10dip" >

        <LinearLayout
            android:id="@+id/group_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

</RelativeLayout>